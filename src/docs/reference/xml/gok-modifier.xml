<refsect2 id="ModifierStates" role="enum">
<title>enum ModifierStates</title>
<indexterm zone="ModifierStates"><primary sortas="ModifierStates">ModifierStates</primary></indexterm><programlisting>typedef enum {
MODIFIER_STATE_OFF,
MODIFIER_STATE_ON,
MODIFIER_STATE_LOCKED
} ModifierStates;
</programlisting>
<para>
</para></refsect2>
<refsect2 id="ModifierTypes" role="enum">
<title>enum ModifierTypes</title>
<indexterm zone="ModifierTypes"><primary sortas="ModifierTypes">ModifierTypes</primary></indexterm><programlisting>typedef enum {
/* a normal modifier like shift or CTRL */
MODIFIER_TYPE_NORMAL,
/* a toggle type of modifier like Capslock */
MODIFIER_TYPE_TOGGLE
} ModifierTypes;
</programlisting>
